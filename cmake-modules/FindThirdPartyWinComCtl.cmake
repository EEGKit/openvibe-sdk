
IF(WIN32)
	FIND_LIBRARY(LIB_STANDARD_MODULE_WINCOMCTL comctl32)
	IF(LIB_STANDARD_MODULE_WINCOMCTL)
		MESSAGE(STATUS "  Found comctl32...")
		IF(TARGET ${PROJECT_NAME})
			TARGET_LINK_LIBRARIES(${PROJECT_NAME} ${LIB_STANDARD_MODULE_WINCOMCTL})
		ENDIF()
		IF(TARGET ${PROJECT_NAME}-static)
			TARGET_LINK_LIBRARIES(${PROJECT_NAME}-static ${LIB_STANDARD_MODULE_WINCOMCTL})
		ENDIF()
	ELSE(LIB_STANDARD_MODULE_WINCOMCTL)
		MESSAGE(STATUS "  FAILED to find comctl32...")
	ENDIF(LIB_STANDARD_MODULE_WINCOMCTL)
ENDIF()

